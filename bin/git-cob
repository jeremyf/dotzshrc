#!/bin/sh

if [[ $1 = "-h" ]]; then
    echo "git-cob is a wrapper around 'git checkout'"
    echo ""
    echo "Any parameters given are passed forward to the 'git branch'"
    echo "command for building the list."
    exit 1
fi

branches=$(
  git --no-pager branch $@ \
      --format="%(if)%(HEAD)%(then)%(else)%(if:equals=HEAD)%(refname:strip=3)%(then)%(else)%1B[0;34;1mbranch%09%1B[m%(refname:short)%(end)%(end)" \
      | sed '/^$/d') || return

tags=$(git --no-pager tag | awk '{print "\x1b[35;1mtag\x1b[m\t" $1}') || return

target=$(
    (echo "$branches"; echo "$tags") |
    fzf --no-hscroll --no-multi --reverse -n 2 \
        --ansi --preview="git --no-pager log -150 --pretty=format:%s '..{2}'") || return

git checkout $(awk '{print $2}' <<<"$target" )
