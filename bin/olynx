#!/usr/bin/env ruby -wU

# This command quite simply strips the query portion of a URL and then opens
# the lynx browser at the given URL.
require 'uri'
url = ARGV[0]
if url
  url = URI.parse(url)
  url.query = nil
  system("lynx #{url}")
else
  $stderr.puts "You must pass an argument to #{File.basename(__FILE__)}"
  exit!(1)
end
