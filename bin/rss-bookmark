#!/usr/bin/env ruby -wU

# Script that writes content to a bookmarks
require 'time'

url = ARGV[0]
title = ARGV[1]
description = ARGV[2]
feed_title = ARGV[3]

bookmarked_on = Time.now.strftime("%Y-%m-%d")

File.open(File.join(ENV['HOME'], "git/takeonrules.github.io/rss/bookmarks/rss-bookmarks.tsv"), "a") do |file|
  file.puts "#{bookmarked_on}\t#{title}\t#{description}\t#{url}\t#{feed_title}"
end
