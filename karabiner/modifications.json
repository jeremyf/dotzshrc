{
    "title": "Quick Tap Emacs Keys",
    "rules": [
	{
	"description": "Left Cmd to C-c if alone",
	"manipulators": [
            {
            "type": "basic",
            "from": {
		"key_code": "left_command",
		"modifiers": {
		    "optional": [
			"any"
		    ]
		}
            },
            "to": [
		{
		"key_code": "left_command",
		"lazy": true
            }
            ],
            "to_if_alone": [
		{
		"key_code": "c",
		"modifiers": [
                    "left_control"
		]
            }
            ]
        }
	]
    },{
	"description": "Left Option to M-x if alone",
	"manipulators": [
